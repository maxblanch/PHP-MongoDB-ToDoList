{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "XDebug",
            "type": "php",
            "request": "launch",
            "pathMappings": {
                "/code/tp1" : "${workspaceFolder}"
            },
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}